<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jwildfire.swing.WelcomeController">
   <children>
      <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="400.0" onMouseClicked="#onLogoClick" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ImageView>
      <ImageView fx:id="mainImageView" fitHeight="300.0" fitWidth="400.0" onMouseClicked="#onMainImageClick" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>
      <FlowPane alignment="CENTER" hgap="10.0" prefWrapLength="400.0" vgap="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onMainPage" text="Main webpage" />
            <Button mnemonicParsing="false" onAction="#onForum" text="Forum" />
            <Button mnemonicParsing="false" onAction="#onDownloads" text="Newest downloads" />
            <Button mnemonicParsing="false" onAction="#onVariations" text="Included Variations" />
            <Button mnemonicParsing="false" onAction="#onDonate" text="Donate" />
            <Button mnemonicParsing="false" onAction="#onCommunity" text="FB community" />
            <Button mnemonicParsing="false" onAction="#onDocumentation" text="Documentation" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
   </children>
</VBox>
